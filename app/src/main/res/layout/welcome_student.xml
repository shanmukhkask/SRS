<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#DABADF"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvWelcomeStd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Welcome \n Student Home"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnDownloadResult"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/student_img"
            android:text="Download\n Result" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_new_style"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="Your registration Number"
                />
            <TextView
                android:id="@+id/tvRegNum"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="Student Name"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnViewResult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Change\n Password"
            android:onClick="changePwd"
            android:background="@drawable/btn_new_style" />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnUploadSheets"
            android:layout_width="0dp"
            android:background="@drawable/btn_new_style"
            android:layout_weight="1"
            android:onClick="viewResult"
            android:layout_height="wrap_content"
            android:text="View\n Result" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnSearchResult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_new_style"
            android:onClick="downloadResult"
            android:text="Download\n Result"
            />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnModifyResult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_new_style"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:onClick="logout"
            />
    </LinearLayout>


</LinearLayout>